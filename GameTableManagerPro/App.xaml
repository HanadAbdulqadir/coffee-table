<Application x:Class="GameTableManagerPro.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:GameTableManagerPro">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary>
                    <!-- Standard WPF Converters -->
                    <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
                    
                    <!-- Custom Converters -->
                    <local:StatusToBrushConverter x:Key="StatusToBrushConverter"/>
                    <local:LogLevelToBrushConverter x:Key="LogLevelToBrushConverter"/>
                    <local:StepToBrushConverter x:Key="StepToBrushConverter"/>
                    <local:ProgressToValueConverter x:Key="ProgressToValueConverter"/>
                    <local:HealthStatusToBrushConverter x:Key="HealthStatusToBrushConverter"/>
                    <local:AlertSeverityToBrushConverter x:Key="AlertSeverityToBrushConverter"/>
                    <local:MonitoringToggleConverter x:Key="MonitoringToggleConverter"/>
                    <local:MonitoringButtonConverter x:Key="MonitoringButtonConverter"/>
                </ResourceDictionary>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
