<Window x:Class="GameTableManagerPro.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:viewModels="clr-namespace:GameTableManagerPro.ViewModels"
        mc:Ignorable="d"
        d:DataContext="{d:DesignInstance Type=viewModels:MainWindowViewModel}"
        Title="{Binding Title}" Height="720" Width="1280"
        WindowStartupLocation="CenterScreen"
        Background="#FF1E1E1E">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        
        <!-- Navigation Pane -->
        <Border Grid.Column="0" Background="#FF2D2D30">
            <StackPanel Margin="10">
                <TextBlock Text="GameTable Manager" Foreground="White" FontSize="18" FontWeight="Bold" Margin="0,0,0,20"/>
                
                <!-- Quick Stats -->
                <Border Background="#FF252526" CornerRadius="5" Padding="10" Margin="0,0,0,20">
                    <StackPanel>
                        <TextBlock Text="QUICK STATS" Foreground="#FF007ACC" FontWeight="Bold" Margin="0,0,0,5"/>
                        <TextBlock Text="{Binding OnlineTablesCount, StringFormat='{}Online: {0}'}" Foreground="LightGreen" Margin="0,2"/>
                        <TextBlock Text="{Binding OfflineTablesCount, StringFormat='{}Offline: {0}'}" Foreground="LightCoral" Margin="0,2"/>
                        <TextBlock Text="{Binding TablesNeedingAttentionCount, StringFormat='{}Needs Attention: {0}'}" Foreground="Orange" Margin="0,2"/>
                    </StackPanel>
                </Border>
                
                <!-- Navigation Buttons -->
                <Button Content="ðŸ“Š Dashboard" Command="{Binding ShowDashboardCommand}" Margin="0,5" Padding="10,5" Style="{StaticResource NavigationButtonStyle}"/>
                <Button Content="ðŸ–¥ï¸ Table Management" Command="{Binding ShowTableManagementCommand}" Margin="0,5" Padding="10,5" Style="{StaticResource NavigationButtonStyle}"/>
                <Button Content="ðŸš€ Deployment" Command="{Binding ShowDeploymentCommand}" Margin="0,5" Padding="10,5" Style="{StaticResource NavigationButtonStyle}"/>
                <Button Content="â¤ï¸ Health Monitoring" Command="{Binding ShowHealthMonitoringCommand}" Margin="0,5" Padding="10,5" Style="{StaticResource NavigationButtonStyle}"/>
                
                <Separator Background="#FF3E3E40" Margin="0,20"/>
                
                <!-- Tools -->
                <Button Content="ðŸ”„ Refresh" Command="{Binding RefreshDashboardCommand}" Margin="0,5" Padding="10,5" Style="{StaticResource ToolButtonStyle}"/>
                <Button Content="âš¡ Test PowerShell" Command="{Binding TestPowerShellConnectionCommand}" Margin="0,5" Padding="10,5" Style="{StaticResource ToolButtonStyle}"/>
                <Button Content="ðŸ’¾ Backup Database" Command="{Binding BackupDatabaseCommand}" Margin="0,5" Padding="10,5" Style="{StaticResource ToolButtonStyle}"/>
                
                <Separator Background="#FF3E3E40" Margin="0,20"/>
                
                <Button Content="âš™ï¸ Settings" Command="{Binding ShowSettingsCommand}" Margin="0,5" Padding="10,5" VerticalAlignment="Bottom" Style="{StaticResource NavigationButtonStyle}"/>
            </StackPanel>
        </Border>

        <!-- Content Area -->
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <ContentControl Grid.Row="0" Margin="20">
                <!-- Views will be loaded here -->
                <Border Background="#FF252526" CornerRadius="10">
                    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                        <TextBlock Text="ðŸŽ® Welcome to GameTable Manager Pro" Foreground="White" FontSize="24" FontWeight="Bold" Margin="0,0,0,10"/>
                        <TextBlock Text="Select a module from the navigation pane to get started" Foreground="#FFCCCCCC" FontSize="14" TextAlignment="Center"/>
                        <TextBlock Text="{Binding StatusMessage}" Foreground="#FF007ACC" FontSize="12" Margin="0,20,0,0" TextAlignment="Center"/>
                    </StackPanel>
                </Border>
            </ContentControl>

            <!-- Status Bar -->
            <StatusBar Grid.Row="1" Background="#FF007ACC">
                <StatusBarItem>
                    <StackPanel Orientation="Horizontal">
                        <Ellipse Width="10" Height="10" Fill="{Binding IsDatabaseConnected, Converter={StaticResource BooleanToStatusBrushConverter}}" Margin="5,0"/>
                        <TextBlock Text="{Binding StatusMessage}" Foreground="White" Margin="5,0"/>
                    </StackPanel>
                </StatusBarItem>
                <StatusBarItem HorizontalAlignment="Right">
                    <TextBlock Text="Ready" Foreground="White" Margin="5,0"/>
                </StatusBarItem>
            </StatusBar>
        </Grid>
    </Grid>
    
    <Window.Resources>
        <!-- Styles -->
        <Style x:Key="NavigationButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="FontSize" Value="14"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#FF3E3E40"/>
                    <Setter Property="Foreground" Value="#FF007ACC"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        
        <Style x:Key="ToolButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#FFCCCCCC"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="FontSize" Value="12"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#FF3E3E40"/>
                    <Setter Property="Foreground" Value="White"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        
        <!-- Converters -->
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
    </Window.Resources>
</Window>
