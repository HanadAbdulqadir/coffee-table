<UserControl x:Class="GameTableManagerPro.Views.DashboardView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:viewModels="clr-namespace:GameTableManagerPro.ViewModels"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="800"
             d:DataContext="{d:DesignInstance Type=viewModels:DashboardViewModel}">
    
    <UserControl.Resources>
        <!-- Status Color Converter -->
        <Color x:Key="GoodStatusColor">#FF4CAF50</Color>
        <Color x:Key="WarningStatusColor">#FFFF9800</Color>
        <Color x:Key="CriticalStatusColor">#FFF44336</Color>
        
        <SolidColorBrush x:Key="GoodStatusBrush" Color="{StaticResource GoodStatusColor}"/>
        <SolidColorBrush x:Key="WarningStatusBrush" Color="{StaticResource WarningStatusColor}"/>
        <SolidColorBrush x:Key="CriticalStatusBrush" Color="{StaticResource CriticalStatusColor}"/>
        
        <Style x:Key="MetricCardStyle" TargetType="Border">
            <Setter Property="Background" Value="#FF252526"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="15"/>
            <Setter Property="Margin" Value="5"/>
        </Style>
        
        <Style x:Key="MetricTitleStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#FFCCCCCC"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Margin" Value="0,0,0,5"/>
        </Style>
        
        <Style x:Key="MetricValueStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontWeight" Value="Bold"/>
        </Style>
    </UserControl.Resources>

    <Grid>
        <!-- Loading Overlay -->
        <Border Background="#80000000" Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}"
                Panel.ZIndex="1000">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <ProgressBar IsIndeterminate="True" Width="200" Height="20" Margin="0,0,0,10"/>
                <TextBlock Text="{Binding StatusMessage}" Foreground="White" TextAlignment="Center"/>
            </StackPanel>
        </Border>

        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="20">
                <!-- Header -->
                <StackPanel Orientation="Horizontal" Margin="0,0,0,20">
                    <TextBlock Text="ðŸ“Š Dashboard" Foreground="White" FontSize="24" FontWeight="Bold"/>
                    <Button Content="ðŸ”„ Refresh" Command="{Binding RefreshDashboardCommand}" 
                            Margin="20,0,0,0" Padding="10,5" Style="{StaticResource ToolButtonStyle}"/>
                    <Button Content="ðŸš€ Deploy to All" Command="{Binding DeployToAllTablesCommand}" 
                            Margin="10,0,0,0" Padding="10,5" Background="#FF007ACC" Foreground="White"/>
                </StackPanel>

                <!-- Quick Stats Grid -->
                <TextBlock Text="QUICK OVERVIEW" Foreground="#FF007ACC" FontWeight="Bold" Margin="0,0,0,10"/>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Total Tables -->
                    <Border Style="{StaticResource MetricCardStyle}">
                        <StackPanel>
                            <TextBlock Text="Total Tables" Style="{StaticResource MetricTitleStyle}"/>
                            <TextBlock Text="{Binding TotalTables}" Style="{StaticResource MetricValueStyle}"/>
                            <TextBlock Text="Systems" Foreground="#FFCCCCCC" FontSize="12"/>
                        </StackPanel>
                    </Border>

                    <!-- Online Tables -->
                    <Border Style="{StaticResource MetricCardStyle}" Grid.Column="1">
                        <StackPanel>
                            <TextBlock Text="Online" Style="{StaticResource MetricTitleStyle}"/>
                            <TextBlock Text="{Binding OnlineTables}" Style="{StaticResource MetricValueStyle}" Foreground="LightGreen"/>
                            <TextBlock Text="Active systems" Foreground="#FFCCCCCC" FontSize="12"/>
                        </StackPanel>
                    </Border>

                    <!-- Offline Tables -->
                    <Border Style="{StaticResource MetricCardStyle}" Grid.Column="2">
                        <StackPanel>
                            <TextBlock Text="Offline" Style="{StaticResource MetricTitleStyle}"/>
                            <TextBlock Text="{Binding OfflineTables}" Style="{StaticResource MetricValueStyle}" Foreground="LightCoral"/>
                            <TextBlock Text="Inactive systems" Foreground="#FFCCCCCC" FontSize="12"/>
                        </StackPanel>
                    </Border>

                    <!-- Needs Attention -->
                    <Border Style="{StaticResource MetricCardStyle}" Grid.Column="3">
                        <StackPanel>
                            <TextBlock Text="Needs Attention" Style="{StaticResource MetricTitleStyle}"/>
                            <TextBlock Text="{Binding TablesNeedingAttention}" Style="{StaticResource MetricValueStyle}" Foreground="Orange"/>
                            <TextBlock Text="Requires action" Foreground="#FFCCCCCC" FontSize="12"/>
                        </StackPanel>
                    </Border>

                    <!-- Deployments -->
                    <Border Style="{StaticResource MetricCardStyle}" Grid.Column="4">
                        <StackPanel>
                            <TextBlock Text="Total Deployments" Style="{StaticResource MetricTitleStyle}"/>
                            <TextBlock Text="{Binding TotalDeployments}" Style="{StaticResource MetricValueStyle}"/>
                            <TextBlock Text="{Binding SuccessfulDeployments, StringFormat='{}Success: {0}'}" Foreground="LightGreen" FontSize="11"/>
                            <TextBlock Text="{Binding FailedDeployments, StringFormat='{}Failed: {0}'}" Foreground="LightCoral" FontSize="11"/>
                        </StackPanel>
                    </Border>
                </Grid>

                <!-- Health Metrics -->
                <TextBlock Text="SYSTEM HEALTH" Foreground="#FF007ACC" FontWeight="Bold" Margin="0,20,0,10"/>
                <ItemsControl ItemsSource="{Binding HealthMetrics}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel Orientation="Horizontal"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Style="{StaticResource MetricCardStyle}" Width="250" Margin="5">
                                <StackPanel>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="{Binding Icon}" FontSize="16" Margin="0,0,5,0"/>
                                        <TextBlock Text="{Binding Title}" Style="{StaticResource MetricTitleStyle}"/>
                                    </StackPanel>
                                    <TextBlock Text="{Binding Value}" Style="{StaticResource MetricValueStyle}" 
                                               Foreground="{Binding Status, Converter={StaticResource StatusToBrushConverter}}"/>
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>

                <!-- Recent Activity Grid -->
                <Grid Margin="0,20,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Recent Tables -->
                    <Border Style="{StaticResource MetricCardStyle}" Margin="0,0,10,0">
                        <StackPanel>
                            <TextBlock Text="RECENT TABLES" Foreground="#FF007ACC" FontWeight="Bold" Margin="0,0,0,10"/>
                            <ItemsControl ItemsSource="{Binding RecentTables}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border Background="#FF1E1E1E" CornerRadius="5" Margin="0,2" Padding="10">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>
                                                
                                                <StackPanel>
                                                    <TextBlock Text="{Binding Hostname}" Foreground="White" FontWeight="Bold"/>
                                                    <TextBlock Text="{Binding IPAddress}" Foreground="#FFCCCCCC" FontSize="11"/>
                                                    <TextBlock Text="{Binding Status}" Foreground="{Binding Status, Converter={StaticResource StatusToBrushConverter}}" FontSize="11"/>
                                                </StackPanel>
                                                
                                                <Button Content="View" Command="{Binding DataContext.ViewTableDetailsCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                        CommandParameter="{Binding}" Grid.Column="1" Padding="5,2" FontSize="11"
                                                        Style="{StaticResource ToolButtonStyle}"/>
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </StackPanel>
                    </Border>

                    <!-- Recent Deployments -->
                    <Border Style="{StaticResource MetricCardStyle}" Grid.Column="1" Margin="10,0,0,0">
                        <StackPanel>
                            <TextBlock Text="RECENT DEPLOYMENTS" Foreground="#FF007ACC" FontWeight="Bold" Margin="0,0,0,10"/>
                            <ItemsControl ItemsSource="{Binding RecentDeployments}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border Background="#FF1E1E1E" CornerRadius="5" Margin="0,2" Padding="10">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>
                                                
                                                <StackPanel>
                                                    <TextBlock Text="{Binding StartTime, StringFormat='{}Started: {0:g}'}" Foreground="White" FontSize="11"/>
                                                    <TextBlock Text="{Binding Status}" Foreground="{Binding Status, Converter={StaticResource StatusToBrushConverter}}" FontWeight="Bold"/>
                                                    <TextBlock Text="{Binding GamingTable.Hostname, StringFormat='{}Table: {0}'}" Foreground="#FFCCCCCC" FontSize="11"/>
                                                </StackPanel>
                                                
                                                <Button Content="Details" Command="{Binding DataContext.ViewDeploymentDetailsCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                        CommandParameter="{Binding}" Grid.Column="1" Padding="5,2" FontSize="11"
                                                        Style="{StaticResource ToolButtonStyle}"/>
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </StackPanel>
                    </Border>
                </Grid>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
