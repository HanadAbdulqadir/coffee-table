<UserControl x:Class="GameTableManagerPro.Views.TableView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:viewModels="clr-namespace:GameTableManagerPro.ViewModels"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="800"
             d:DataContext="{d:DesignInstance Type=viewModels:TableManagementViewModel}">
    
    <UserControl.Resources>
        <!-- Styles -->
        <Style x:Key="TableCardStyle" TargetType="Border">
            <Setter Property="Background" Value="#FF252526"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="15"/>
            <Setter Property="Margin" Value="5"/>
        </Style>
        
        <Style x:Key="FilterPanelStyle" TargetType="Border">
            <Setter Property="Background" Value="#FF2D2D30"/>
            <Setter Property="CornerRadius" Value="5"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
        </Style>
        
        <Style x:Key="EditPanelStyle" TargetType="Border">
            <Setter Property="Background" Value="#FF2D2D30"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="Margin" Value="10"/>
        </Style>
        
        <!-- Simple converters for missing styles -->
        <viewModels:CountToVisibilityConverter x:Key="CountToVisibilityConverter"/>
        <viewModels:NullToVisibilityConverter x:Key="NullToVisibilityConverter"/>
    </UserControl.Resources>

    <Grid>
        <!-- Loading Overlay -->
        <Border Background="#80000000" Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}"
                Panel.ZIndex="1000">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <ProgressBar IsIndeterminate="True" Width="200" Height="20" Margin="0,0,0,10"/>
                <TextBlock Text="{Binding StatusMessage}" Foreground="White" TextAlignment="Center"/>
            </StackPanel>
        </Border>

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto" MaxWidth="400"/>
            </Grid.ColumnDefinitions>

            <!-- Main Content -->
            <ScrollViewer Grid.Column="0" VerticalScrollBarVisibility="Auto">
                <StackPanel Margin="20">
                    <!-- Header -->
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,20">
                        <TextBlock Text="ðŸ–¥ï¸ Table Management" Foreground="White" FontSize="24" FontWeight="Bold"/>
                        <Button Content="ðŸ”„ Refresh" Command="{Binding LoadTablesCommand}" 
                                Margin="20,0,0,0" Padding="10,5" Style="{StaticResource ToolButtonStyle}"/>
                    </StackPanel>

                    <!-- Filter Panel -->
                    <Border Style="{StaticResource FilterPanelStyle}">
                        <StackPanel>
                            <TextBlock Text="FILTER TABLES" Foreground="#FF007ACC" FontWeight="Bold" Margin="0,0,0,10"/>
                            
                            <StackPanel Orientation="Horizontal">
                                <TextBox Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}" 
                                         Width="200" Margin="0,0,10,0" Padding="8"
                                         PlaceholderText="Search tables..." 
                                         Style="{StaticResource ModernTextBox}"/>
                                
                                <ComboBox SelectedItem="{Binding StatusFilter}" Width="150" Margin="0,0,10,0"
                                          ItemsSource="{Binding AvailableStatuses}"/>
                                
                                <Button Content="Clear Filters" Command="{Binding ClearFiltersCommand}" 
                                        Padding="10,5" Style="{StaticResource ToolButtonStyle}"/>
                                
                                <TextBlock Text="{Binding FilteredTables.Count, StringFormat='{}Showing: {0} tables'}" 
                                           Foreground="#FFCCCCCC" Margin="20,0,0,0" VerticalAlignment="Center"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>

                    <!-- Action Buttons -->
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,20">
                        <Button Content="âž• Add Table" Command="{Binding AddNewTableCommand}" 
                                Padding="15,8" Background="#FF4CAF50" Foreground="White" FontWeight="Bold"/>
                        
                        <Button Content="ðŸ“Š Export" Command="{Binding ExportTablesCommand}" 
                                Margin="10,0,0,0" Padding="15,8" Style="{StaticResource ToolButtonStyle}"/>
                        
                        <!-- Bulk Actions -->
                        <Menu Margin="20,0,0,0" VerticalAlignment="Center">
                            <Menu.ItemsSource>
                                <x:Array Type="{x:Type viewModels:AlertSeverity}">
                                    <viewModels:AlertSeverity>Online</viewModels:AlertSeverity>
                                    <viewModels:AlertSeverity>Offline</viewModels:AlertSeverity>
                                    <viewModels:AlertSeverity>Needs Attention</viewModels:AlertSeverity>
                                </x:Array>
                            </Menu.ItemsSource>
                            <Menu.ItemContainerStyle>
                                <Style TargetType="MenuItem">
                                    <Setter Property="Header" Value="{Binding}"/>
                                    <Setter Property="Command" Value="{Binding DataContext.BulkStatusUpdateCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"/>
                                    <Setter Property="CommandParameter" Value="{Binding}"/>
                                </Style>
                            </Menu.ItemContainerStyle>
                        </Menu>
                    </StackPanel>

                    <!-- Tables Grid -->
                    <ItemsControl ItemsSource="{Binding FilteredTables}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Style="{StaticResource TableCardStyle}" 
                                        Background="{Binding IsSelected, RelativeSource={RelativeSource AncestorType=ListBoxItem}, Converter={StaticResource SelectionToBrushConverter}}">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <!-- Table Info -->
                                        <StackPanel>
                                            <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                                                <TextBlock Text="{Binding Hostname}" Foreground="White" FontWeight="Bold" FontSize="16"/>
                                                <TextBlock Text="{Binding IPAddress, StringFormat='{}({0})'}" Foreground="#FFCCCCCC" Margin="10,0,0,0"/>
                                            </StackPanel>
                                            
                                            <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                                                <TextBlock Text="{Binding Status}" Foreground="{Binding Status, Converter={StaticResource StatusToBrushConverter}}" 
                                                           FontWeight="Bold" Margin="0,0,10,0"/>
                                                <TextBlock Text="{Binding Version, StringFormat='{}v{0}'}" Foreground="#FFCCCCCC" Margin="0,0,10,0"/>
                                                <TextBlock Text="{Binding LastSeen, StringFormat='{}Last seen: {0:g}'}" Foreground="#FF888888"/>
                                            </StackPanel>
                                            
                                            <TextBlock Text="{Binding HardwareInfo}" Foreground="#FFCCCCCC" FontSize="11" Margin="0,5,0,0"
                                                       TextWrapping="Wrap"/>
                                        </StackPanel>

                                        <!-- Action Buttons -->
                                        <StackPanel Grid.Column="1" Orientation="Horizontal">
                                            <Button Content="ðŸ” View" Command="{Binding DataContext.ViewTableDetailsCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                    CommandParameter="{Binding}" Padding="5,2" Margin="0,0,5,0" FontSize="11"
                                                    Style="{StaticResource ToolButtonStyle}" ToolTip="View details"/>
                                            
                                            <Button Content="ðŸ”„ Refresh" Command="{Binding DataContext.RefreshSelectedTableCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                    CommandParameter="{Binding}" Padding="5,2" Margin="0,0,5,0" FontSize="11"
                                                    Style="{StaticResource ToolButtonStyle}" ToolTip="Refresh table"/>
                                            
                                            <Button Content="ðŸ“‹ History" Command="{Binding DataContext.ShowDeploymentHistoryCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                    CommandParameter="{Binding}" Padding="5,2" Margin="0,0,5,0" FontSize="11"
                                                    Style="{StaticResource ToolButtonStyle}" ToolTip="View deployment history"/>
                                        </StackPanel>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>

                    <!-- Empty State -->
                    <TextBlock Text="No tables found matching current filters" Foreground="#FFCCCCCC" FontStyle="Italic" 
                               HorizontalAlignment="Center" Margin="0,20" FontSize="14"
                               Visibility="{Binding FilteredTables.Count, Converter={StaticResource CountToVisibilityConverter}, ConverterParameter=Reverse}"/>
                </StackPanel>
            </ScrollViewer>

            <!-- Edit Panel -->
            <Border Grid.Column="1" Style="{StaticResource EditPanelStyle}" 
                    Visibility="{Binding ShowEditPanel, Converter={StaticResource BooleanToVisibilityConverter}}">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel>
                        <TextBlock Text="{Binding IsEditing, Converter={StaticResource EditModeConverter}}" 
                                   Foreground="#FF007ACC" FontWeight="Bold" FontSize="16" Margin="0,0,0,15"/>
                        
                        <!-- Edit Form -->
                        <StackPanel>
                            <TextBlock Text="Hostname *" Foreground="#FFCCCCCC" Margin="0,0,0,5"/>
                            <TextBox Text="{Binding EditTable.Hostname}" Margin="0,0,0,10" 
                                     Style="{StaticResource ModernTextBox}"/>
                            
                            <TextBlock Text="IP Address *" Foreground="#FFCCCCCC" Margin="0,0,0,5"/>
                            <TextBox Text="{Binding EditTable.IPAddress}" Margin="0,0,0,10" 
                                     Style="{StaticResource ModernTextBox}"/>
                            
                            <TextBlock Text="Status" Foreground="#FFCCCCCC" Margin="0,0,0,5"/>
                            <ComboBox SelectedItem="{Binding EditTable.Status}" 
                                      ItemsSource="{Binding AvailableStatuses}" 
                                      Margin="0,0,0,10" Style="{StaticResource ModernComboBox}"/>
                            
                            <TextBlock Text="Version" Foreground="#FFCCCCCC" Margin="0,0,0,5"/>
                            <TextBox Text="{Binding EditTable.Version}" Margin="0,0,0,10" 
                                     Style="{StaticResource ModernTextBox}"/>
                            
                            <TextBlock Text="Hardware Info" Foreground="#FFCCCCCC" Margin="0,0,0,5"/>
                            <TextBox Text="{Binding EditTable.HardwareInfo}" AcceptsReturn="True" Height="60"
                                     Style="{StaticResource ModernTextBox}" TextWrapping="Wrap" VerticalScrollBarVisibility="Auto"/>
                        </StackPanel>

                        <!-- Action Buttons -->
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
                            <Button Content="Cancel" Command="{Binding CancelEditCommand}" 
                                    Padding="15,8" Margin="0,0,10,0" Style="{StaticResource ToolButtonStyle}"/>
                            <Button Content="{Binding IsEditing, Converter={StaticResource SaveButtonConverter}}"
                                    Command="{Binding SaveTableCommand}" 
                                    Padding="15,8" Background="#FF4CAF50" Foreground="White" FontWeight="Bold"/>
                        </StackPanel>
                    </StackPanel>
                </ScrollViewer>
            </Border>
        </Grid>
    </Grid>
</UserControl>
